%p{ style: 'font-size:18px; text-align:center; line-height:30px;' }
  - group_link = link_to(@group.name, group_url(@group), style: "display:block;")
  = s_("ComplianceFrameworks|A compliance frameworks CSV export for the group %{group_link} is attached to this email.").html_safe % { group_link: group_link }

  - if @truncated
    %p{ style: 'font-size:18px; text-align:center; line-height:30px;' }
      = s_("ComplianceFrameworks|Note: This report was truncated to adhere to filesize limits of %{size}.") % { size: number_to_human_size(ComplianceManagement::Frameworks::ExportService::TARGET_FILESIZE) }
