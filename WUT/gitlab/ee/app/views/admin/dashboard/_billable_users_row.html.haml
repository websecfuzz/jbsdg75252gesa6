- billable_users_url = help_page_path('subscriptions/self_managed/_index.md', anchor: 'billable-users')
- billable_users_link_start = '<a href="%{url}" target="_blank" rel="noopener noreferrer nofollow">'.html_safe % { url: billable_users_url }

%tr.gl-bg-subtle.gl-text-default
  %td.p-3
    %strong
      = s_('AdminArea|Total Billable users')
    %span.gl-outline-none.gl-ml-2{ href: "#", tabindex: "0", role: "button", data: { container: "body",
      toggle: "popover",
      placement: "top",
      html: "true",
      trigger: "focus",
      content: s_("AdminArea|%{billable_users_link_start}Learn more%{billable_users_link_end} about what defines a billable user").html_safe % { billable_users_link_start: billable_users_link_start, billable_users_link_end: '</a>'.html_safe } } }
      = sprite_icon('question-o', size: 16, css_class: 'gl-fill-icon-info')
  %td.p-3.text-right
    %strong
      = @users_statistics&.billable.to_i
