- demo_link = 'https://gitlab.navattic.com/duo-enterprise?utm_medium=email&utm_source=iterable&utm_campaign=eg_global_lfc_nurture_aisdlc_en_duoenterpriseseatallocation&utm_content=onboarding_email_x'
- click_through_demo_link = link_to('', demo_link, target: '_blank', rel: 'noopener noreferrer')
- duo_enterprise_info_url = 'https://about.gitlab.com/gitlab-duo/?utm_medium=email&utm_source=iterable&utm_campaign=eg_global_lfc_nurture_aisdlc_en_duoenterpriseseatallocation&utm_content=onboarding_email_x#features'
- duo_enterprise_info_link = link_to('', duo_enterprise_info_url, target: '_blank', rel: 'noopener noreferrer')
:css
  a {color: #A989F5 }
  table { font-family: "Inter", helvetica, arial, sans-serif;}
%table{ border: "0", cellpadding: "0", cellspacing: "0", role: "presentation", width: "100%" }
  %tr
    %td{ align: "center", style: "padding: 0px;" }
      %table{ border: "0", cellpadding: "0", cellspacing: "0", role: "presentation", style: "background-color: #171321", width: "600" }
        %tr
          %td{ style: "padding: 0px;" }
            %table{ border: "0", cellpadding: "0", cellspacing: "0", role: "presentation", width: "100%" }
              %tr
                %td{ align: "left", style: "padding: 20px;" }
                  %a{ href: "https://about.gitlab.com/", target: "_blank", rel: "noopener noreferrer nofollow" }
                    %img{ alt: "go to demo", src: image_url('mailers/duo/duo_white_logo.png'), width: "150" }

              %tr
                %td{ style: "max-width: 600px; width: 100%; text-align: left; height: 62px; padding: 0 20px; min-height: 40px;", valign: "middle", width: "100%" }
                  %h1{ style: "padding-bottom: 13px; color: #ffffff; margin: 0;" }
                    = s_('DuoEnterprise|You have been assigned a GitLab Duo Enterprise seat')

              %tr
                %td{ style: "padding: 20px 50px 20px 25px; color: #ffffff; line-height: 20px;" }
                  %p
                    = safe_format(s_('DuoEnterprise|You now have access to %{link_start}GitLab Duo Enterprise%{link_end}, which boosts your efficiency and effectiveness by reducing the time required to write and understand code.'), tag_pair(duo_enterprise_info_link, :link_start, :link_end))
                  %p
                    - help_link = link_to('', help_page_url('user/get_started/getting_started_gitlab_duo.md', anchor: 'step-4-prepare-to-use-gitlab-duo-in-your-ide'), target: '_blank', rel: 'noopener noreferrer')
                    = safe_format(s_('DuoEnterprise|To get started using GitLab Duo Enterprise features, %{link_start}set up your IDE for success%{link_end}.'), tag_pair(help_link, :link_start, :link_end))

              %tr
                %td{ align: "left", style: "padding: 10px 40px 15px 30px; color: #ffffff;" }
                  %a{ href: help_page_url('user/get_started/getting_started_gitlab_duo.md', anchor: 'step-4-prepare-to-use-gitlab-duo-in-your-ide'), style: "font-weight: bold; color: #ffffff; text-decoration: none; border-radius: 3px;  border-top: 10px solid #7759c2; border-bottom: 10px solid #7759c2; border-right: 25px solid #7759c2; border-left: 25px solid #7759c2; background-color: #7759c2; display: inline-block;", target: "_blank", rel: "noopener noreferrer nofollow" }
                    = _('Get started')

              / pill section divider
              %table{ role: "presentation", style: "margin: 20px" }
                %tr
                  %td{ style: "font-family: 'JetBrains Mono', monospace; line-height: 1.3; text-align: left; color: #e3d6ff; padding: 3px 21px 3px 21px; border: 1px solid #E3D6FF; border-radius: 25px" }
                    %p
                      = _('Key features')
              / /pill section divider

              / features
              %tr
                %td
                  %table{ role: "presentation", style: "color: #ffffff; width: 580px" }
                    %tr
                      %td{ style: "vertical-align: top; padding: 10px 25px 20px 15px" }
                        %a{ href: help_page_url('user/project/repository/code_suggestions/_index.md'), target: '_blank', rel: 'noopener noreferrer' }
                          %img{ alt: "Code Suggestions", src: image_url('mailers/duo/code_suggestions_feature_preview'), width: "170" }
                      %td{ align: "left", style: "vertical-align: middle" }
                        %h3{ style: "line-height: 20px; margin: 0;" }
                          %a{ href: help_page_url('user/project/repository/code_suggestions/_index.md'), target: '_blank', rel: 'noopener noreferrer' }
                            = s_('DuoEnterprise|Code Suggestions')
                        %p{ style: "margin: 13px 0px; line-height: 1.5" }
                          = s_('DuoEnterprise|Automatically generate new lines of code, including full functions, from single and multi-line comments as well as comment blocks')
                    %tr
                      %td{ style: "vertical-align: top; padding: 20px 25px 20px 15px" }
                        %a{ href: help_page_url('user/gitlab_duo_chat/examples.md', anchor: 'write-tests-in-the-ide'), target: '_blank', rel: 'noopener noreferrer' }
                          %img{ alt: "Test Generation", src: image_url('mailers/duo/test_generation_feature_preview'), width: "170" }
                      %td{ align: "left", style: "vertical-align: middle; padding: 20px 15px 20px 0px" }
                        %h3{ style: "line-height: 20px; margin: 0;" }
                          %a{ href: help_page_url('user/gitlab_duo_chat/examples.md', anchor: 'write-tests-in-the-ide'), target: '_blank', rel: 'noopener noreferrer' }
                            = s_('DuoEnterprise|Test Generation')
                        %p{ style: "margin: 13px 0px; line-height: 1.5" }
                          = s_('DuoEnterprise|Automate your repetitive tasks and catch bugs early')
                    %tr
                      %td{ style: "vertical-align: top; padding: 20px 25px 20px 15px" }
                        %a{ href: help_page_url('user/gitlab_duo_chat/examples.md', anchor: 'troubleshoot-failed-cicd-jobs-with-root-cause-analysis'), target: '_blank', rel: 'noopener noreferrer' }
                          %img{ alt: "Root Cause Analysis", src: image_url('mailers/duo/root_cause_analysis_feature_preview'), width: "170" }
                      %td{ align: "left", style: "vertical-align: middle; padding: 20px 15px 0px 0px" }
                        %h3{ style: "line-height: 20px; margin: 0;" }
                          %a{ href: help_page_url('user/gitlab_duo_chat/examples.md', anchor: 'troubleshoot-failed-cicd-jobs-with-root-cause-analysis'), target: '_blank', rel: 'noopener noreferrer' }
                            = s_('DuoEnterprise|AI-assisted root cause analysis')
                        %p{ style: "margin: 13px 0px; line-height: 1.5" }
                          = s_('DuoEnterprise|Quickly resolve CI/CD pipeline issues so developers can focus on critical tasks')
              / /features

              / demo link
              %tr
                %td{ style: "padding: 20px; color: #ffffff;" }
                  %p
                    = safe_format(s_('DuoEnterprise|Explore all of the Duo Enterprise features in this %{demo_link_start}click-through demo%{demo_link_end}'), tag_pair(click_through_demo_link, :demo_link_start, :demo_link_end))
              / /demo link

              / border-based button purple
              %tr
                %td{ align: "left", style: "padding: 20px;" }
                  %a{ href: new_session_path(:user), style: "font-weight: bold; color: #ffffff; text-decoration: none; border-radius: 3px;  border-top: 10px solid #7759c2; border-bottom: 10px solid #7759c2; border-right: 25px solid #7759c2; border-left: 25px solid #7759c2; background-color: #7759c2; display: inline-block;", target: "_blank", rel: "noopener noreferrer nofollow" }
                    = _('Go to GitLab')
              / /border-based button purple

              / pill section divider
              %tr
                %td
                  %table{ role: "presentation", style: "margin: 20px" }
                    %tr
                      %td{ style: "font-family: 'JetBrains Mono', monospace; line-height: 1.3; text-align: left; color: #e3d6ff; padding: 3px 21px 3px 21px; border: 1px solid #E3D6FF; border-radius: 25px" }
                        %p
                          = _('Resources')
              / /pill section divider

              / resources
              %tr
                %td{ align: "center", style: "padding: 10px" }
                  %table{ role: "presentation" }
                    %tr
                      %td{ width: "170", align: "center" }
                        %table{ role: "presentation" }
                          %tr
                            %td{ align: "center", style: "padding-bottom: 10px" }
                              %a{ href: "https://university.gitlab.com/pages/ai?utm_medium=email&utm_source=iterable&utm_campaign=eg_global_lfc_nurture_aisdlc_en_duoenterpriseseatallocation&utm_content=onboarding_email_x#developers-quick", target: '_blank', rel: 'noopener noreferrer' }
                                %img{ alt: "quick start guide", src: image_url('mailers/duo/duo_guide_icon'), width: "60" }
                          %tr
                            %td{ align: "center" }
                              %h3{ style: "color: #ffffff" }
                                = _('Quick start guide')
                      %td{ width: "170", align: "center" }
                        %table{ role: "presentation" }
                          %tr
                            %td{ align: "center", style: "padding-bottom: 10px" }
                              %a{ href: "https://university.gitlab.com/?utm_medium=email&utm_source=iterable&utm_campaign=eg_global_lfc_nurture_aisdlc_en_duoenterpriseseatallocation&utm_content=onboarding_email_x", target: '_blank', rel: 'noopener noreferrer' }
                                %img{ alt: "GitLab University", src: image_url('mailers/duo/duo_learn_icon'), width: "60" }
                          %tr
                            %td{ align: "center" }
                              %h3{ style: "color: #ffffff" }
                                = _('GitLab University')
                      %td{ width: "170", align: "center" }
                        %table{ role: "presentation" }
                          %tr
                            %td{ align: "center", style: "padding-bottom: 10px" }
                              %a{ href: help_page_url('user/gitlab_duo/_index.md'), target: '_blank', rel: 'noopener noreferrer' }
                                %img{ alt: "Documentation", src: image_url('mailers/duo/duo_docs_icon'), width: "60" }
                          %tr
                            %td{ align: "center" }
                              %h3{ style: "color: #ffffff" }
                                = _('Documentation')
              //resources

              / footer
              %tr
                %td{ align: "center", style: "color: #ffffff; padding-top: 60px;" }
                  %img{ alt: "GitLab", src: image_url('mailers/gitlab_logo.png'), width: "36" }
                  %p{ style: "font-size: 13px; padding: 20px" }
                    = notification_reason_text(show_manage_notifications_link: true, show_help_link: true, unsubscribe_url: @unsubscribe_url, format: :html)
              / /footer
