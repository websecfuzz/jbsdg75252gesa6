- issue = local_assigns.fetch(:issue)

- status_text = { 'at_risk' => _('At risk'), 'on_track' => _('On track'), 'needs_attention' => _('Needs attention') }
- status_classes = { 'at_risk' => 'gl-bg-status-danger gl-text-status-danger', 'on_track' => 'gl-bg-status-success gl-text-status-success', 'needs_attention' => 'gl-bg-status-warning gl-text-status-warning' }

- if issue.health_status
  .gl-ml-2.health-status.gl-inline-flex.gl-items-center
    &nbsp;
    %span.gl-label.gl-label-text-dark{ data: { testid: "health-status" }, class: status_classes[issue.health_status] }
      %span.gl-label-text
        = status_text[issue.health_status]
