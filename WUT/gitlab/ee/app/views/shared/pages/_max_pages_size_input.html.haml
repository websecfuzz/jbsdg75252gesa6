- return unless can?(current_user, :update_max_pages_size)

- form = local_assigns.fetch(:form)

.form-group
  = form.label :max_pages_size, class: 'label-bold' do
    = s_('GitLabPages|Maximum size (MB)')
  = form.number_field :max_pages_size, value: form.object.max_pages_size, class: 'form-control gl-form-input-sm', min: 0
  %span.form-text.gl-text-subtle#repository_size_limit_help_block
    = s_('GitLabPages|Can be overridden per project. For no limit, enter 0. To inherit the value, leave empty.')
