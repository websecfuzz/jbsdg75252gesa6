%div{ class: content_class }
  = render Pajamas::AlertComponent.new(variant: variant,
        dismissible: dismissible,
        alert_options: { class: 'js-user-over-limit-free-plan-alert gl-mt-3', data: alert_data },
        title: alert_attributes[:title],
        close_button_options: { data: close_button_data }) do |c|
    - c.with_body do
      = alert_attributes[:body]

    - if alert_attributes[:primary_cta] || alert_attributes[:secondary_cta]
      - c.with_actions do
        = alert_attributes[:primary_cta]
        = alert_attributes[:secondary_cta]
