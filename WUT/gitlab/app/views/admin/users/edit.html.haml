    = render ::Layouts::SettingsSectionComponent.new(_('Organization'), testid: 'organization-section') do |c|
      - c.with_body do
        #js-admin-edit-user-organization-field{ data: { app_data: admin_edit_user_organization_field_app_data(@user) } }
= render 'form'
